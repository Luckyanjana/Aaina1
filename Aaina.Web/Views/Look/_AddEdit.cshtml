                                                        var atter = Model.PlayerList.FirstOrDefault(f => f.UserId == item.UserId);
                                                        if (atter != null)
                                                        {
                                                            <label id="span_player_@atter.UserId">@atter.Name<a href="javascript:void(0);" data-id="player_@atter.UserId" class="choice__remove"><i class="fa fa-close"></i></a></label>
