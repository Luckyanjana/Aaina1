@using WYO.Web.Code.LIBS;
@using WYO.Core;
@model  WYO.Data.UserProfile
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SiteKeys.ApplicationName</title>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;margin: 15px 0;padding: 0;width: 100%;">
    <table width="650" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="padding:15px 0; border-bottom:1px solid #dddddd;"><img src="@Url.Content(SiteKeys.AdminDomain+"/UploadedFiles/Logo/logo.png")" alt="" border="0" /></td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:18px; font-weight:bold; padding:15px 0 0 0;">Dear @Model.FirstName,</td>
                    </tr>
                    <tr>
                        <td style="padding:15px 0;">
                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Welcome to @SiteKeys.ApplicationName, We are dedicated to providing you superior service, competitive rates, and unequaled incentives.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Our friendly, knowledgeable customer service representatives are standing by to explain our services and to assist you in getting the most from our service. You may call us toll free at 555-5555.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Your complete satisfaction is our first priority! We are delighted to have you and look forward to serving you.
                                    </td>
                                </tr>
                                @if (Model.Company != null && Model.Company.Count > 0)
                                {
                                    <tr>
                                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                            You are registered with <b> @Model.Company.FirstOrDefault().CompanySubscriber.FirstOrDefault().SubscriptionPlan.Name </b> account.
                                            You can manage <b> @Model.Company.FirstOrDefault().CompanySubscriber.FirstOrDefault().SubscriptionPlan.AllowedCompanies companies</b> and
                                            <b> @Model.Company.FirstOrDefault().CompanySubscriber.FirstOrDefault().SubscriptionPlan.AllowedUser users</b> in each company.
                                        </td>
                                    </tr>
                                }

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Please use below details to access your account :
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>Company Login URL :</b> @WYO.Web.Code.LIBS.SiteKeys.Domain
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>Company Reference :</b> @Model.Staff.FirstOrDefault().Company.CompanyRef
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>User Name :</b> @Model.User.Email
                                    </td>
                                </tr>
                                @if (!String.IsNullOrEmpty(Model.Password))
                                {
                                    <tr>
                                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                            <b>Password :</b>  @Model.Password
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        If you have not signed up to "@SiteKeys.ApplicationName", please ignore this email.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;"></td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Sincerely
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Owner Name
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        CEO, @SiteKeys.ApplicationName
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Adrees: @SiteKeys.ApplicationName<br />Office Address
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="left">
                    <tr>
                        <td align="center" style=" padding:15px 0; border-top:1px solid #dddddd; font-size:12px; text-align:left; color:#888888;">Copyright @DateTime.UtcNow.Year @SiteKeys.Domain</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
