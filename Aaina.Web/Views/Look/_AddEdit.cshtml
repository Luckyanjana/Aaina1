                                                                    {
                                                                        var subAtter = Model.LookSubAttribute.FirstOrDefault(f => f.SubAttributeId == satt.Id);
                                                                        var IsAddedsubAtter = subAtter != null && subAtter.Id > 0;
                                                                        <tr>
                                                                            <td class="text-center">@satt.Id</td>
                                                                            <td class="text-center" style="text-align:right;">@satt.Name</td>
                                                                            <td>
                                                                                <input type="hidden" name="lookSubAttribute[@saindex].SubAttributeId" value="@satt.Id" />
                                                                                @if (IsAddedsubAtter)
                                                                                {
                                                                                    <input type="hidden" name="lookSubAttribute[@saindex].Id" value="@subAtter.Id" />
                                                                                    <input type="checkbox" name="lookSubAttribute[@saindex].IsAdded" value="true" checked data-divid="div_add_atterbute" data-type="subatter" data-id="@satt.Id" id="subatter_@satt.Id" data-name="@satt.Name" class="added atter_@item.Id" />
                                                                                }
                                                                                else
                                                                                {
                                                                                    <input type="checkbox" name="lookSubAttribute[@saindex].IsAdded" value="false" data-divid="div_add_atterbute" data-type="subatter" data-id="@satt.Id" id="subatter_@satt.Id" data-name="@satt.Name" class="added atter_@item.Id" />
                                                                                }

                                                                            </td>
                                                                        </tr>
                                                                        saindex++;
                                                                    }

                                                                    aindex++;
                                                                }
                                                            </tbody>
                                                        </table>
                                                        <a href="javascript:void(0);" class="btn btn-warning fright wauto">Add</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-sm-12">
                                        <div class="step1 sele-r-right" id="div_add_atterbute">
                                            @foreach (var item in Model.LookAttribute)
                                            {
                                                var atter = Model.AttributeList.FirstOrDefault(f => f.Id == item.AttributeId);
                                                <label id="span_atter_@atter.Id"><label>@atter.Name</label> <a href="javascript:void(0);" data-id="atter_@atter.Id" class="choice_remove"><i class="fa fa-close"></i></a></label>
                                            }

                                            @foreach (var item in Model.LookSubAttribute)
                                            {
                                                var subAtter = Model.AttributeList.FirstOrDefault(f => f.SubAttribute.Any(a => a.Id == item.SubAttributeId)).SubAttribute.FirstOrDefault(a => a.Id == item.SubAttributeId);
                                                <label id="span_subatter_@subAtter.Id">@subAtter.Name <a href="javascript:void(0);" data-id="subatter_@subAtter.Id" class="choice_remove"><i class="fa fa-close"></i></a></label>
                                            }



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

