
@model Aaina.Dto.RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = null;
    string message = TempData["message"] != null ? Convert.ToString(TempData["message"].ToString()) : string.Empty;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Aaina @ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,700;0,800;1,600;1,700&display=swap" rel="stylesheet">
    <link href="~/Themes/Theme1/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Themes/Theme1/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Themes/Theme1/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Themes/Theme1/css/responsive.css" rel="stylesheet" type="text/css">
    <link href="~/plugins/waitMe/waitMe.min.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }
    </style>
</head>

<body>
    <div id="dvWaitMe"></div>
    <div class="login-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-box" id="account_rigster">
                        @if (message != null && !string.IsNullOrEmpty(message))
                        {
                            if (bool.Parse(TempData["isValidRequest"].ToString()))
                            {
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <b><i class="icon fa fa-check"></i> Success!</b><br /> You have registered successfully
                                </div>
                            }
                        }
                        <div class="login-logo"> <img src="~/Themes/Theme1/images/fo-icon2.png"> </div>
                        <div id="validation-summary"></div>
                        <form asp-action="register" asp-controller="account" method="post" autocomplete="off">
                            <div class="form-group">
                                <input type="text" asp-for="Fname" class="form-control" placeholder="First Name">
                                <span asp-validation-for="Fname" class="field-validation-error"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Lname" class="form-control" placeholder="Last Name">
                                <span asp-validation-for="Lname" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Username">
                                <span asp-validation-for="UserName" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password"  /><a href="javascript:void(0);" id="showpassword" class="password"><i class="fa fa-eye"></i></a>  
                                <span asp-validation-for="Password" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                            </div>

                            <div class="form-group btnlogin">
                                <input name="Login" class="btn btn-primary" id="btn-submit" value="Sign Up" type="submit">
                            </div>
                            @Html.AntiForgeryToken()
                        </form>
                        <div class="form-group">
                            <a class="forgot" asp-action="Login" asp-controller="Account">I already have a membership</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/bower_components/jquery/dist/jquery.min.js" asp-append-version="true"></script>

    <script src="~/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/waitMe.js"></script>
    <script src="~/js/global.js"></script>
    <script src="~/js/Customejs/Account/Register.js" asp-append-version="true"></script>
    
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>