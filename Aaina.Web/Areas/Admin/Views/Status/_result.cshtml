@model List<StatusFeedbackDisplayDto>

@using Aaina.Common;
@using Newtonsoft.Json;


<div id="frm-add-edit-role" class="box">    
        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "View Status with feedback" })


    <div class="modal-body">
        <div id="validation-summary"></div>

        <h4>By: @ViewBag.By</h4>
        <h4>For: @ViewBag.For</h4>

        <h5>Name: @ViewBag.name</h5>
        @foreach (var item in Model)
        {
            int findex = 1;
    <div class="col-lg-12 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">CreadtedBy:@item.UserName </div>
            <div class="panel-body">
                @foreach (var feed in item.Feedback)
                {
                    <div class="col-lg-12 col-sm-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading">Feebback @findex</div>
                            <div class="panel-body">
                                <div class="step1">
                                    <div class="step1-in">
                                        <div class="row">
                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label>Game: @feed.Game</label>                                                   
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label>Sub Game: @feed.SubGame</label>                                                   
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label>Feedback Date: @feed.FeedbackDate.ToString("dd/MM/yyyy")</label>                                                    
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12 col-sm-12">
                                                <div class="form-group">
                                                    <label>Feedback</label>
                                                    <textarea class="form-control" readonly> @feed.Feedback</textarea>                                                    
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label>Status: @(((StatusType)feed.Status).GetEnumDescription())</label>                                                   
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label>Progress  @feed.Progress %</label>                                                    
                                                    <input type="range" disabled="disabled"  min="1" value="@feed.Progress" max="100" >
                                                </div>
                                            </div>

                                            <div class="col-lg-4 col-sm-12">
                                                <div class="form-group">
                                                    <label><i class="fa fa-info-circle"></i> emotion</label>
                                                    <div class="row wrap_input" style="margin-top: 10px;">
                                                        <div class="col-md-12">
                                                            <div class="range-wrap">
                                                                <div class="range-value" style="left: calc(0% + 4.5px);">
                                                                    <span><img src="/DYF/@CurrentUser.CompanyId/EmojiImages/@(feed.Emotion).png" class="imgemoji"></span>
                                                                </div>
                                                                <input type="range"  disabled min="1" max="10" value="@feed.Emotion" step="1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                    findex++;
                }

            </div>
        </div>


    </div>
        }
        
        
       
    </div>
        @Html.Partial("_ModalFooter", new ModalFooter {OnlyCancelButton=true })
    
</div>