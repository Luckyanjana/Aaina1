@model WeightageDto

<style>
    ._msddli_{
        margin:10px;
    }
    .fnone {
        width: 25px;
    }
</style>
<div id="frm-add-edit-admin" class="box">
    <form asp-action="addedit" asp-controller="weightage" asp-area="admin" method="post" autocomplete="off" enctype="multipart/form-data">
        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Emoji Add/Edit" })

        <div class="modal-body">
            <div id="validation-summary"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-lg-12 col-sm-12">
                <div class="step1">
                    <div class="step1-in">
                        <div class="form-group">
                            <label asp-for="Emoji">Emoji</label>
                            
                            <input type="hidden" asp-for="Emoji" />
                            <input type="file" name="emojiImg" id="emojiImg" accept="image/png,image/jpeg"  />
                            @if (!string.IsNullOrEmpty(Model.Emoji))
                            {
                                <img src="~/DYF/@CurrentUser.CompanyId/EmojiImages/@Model.Emoji" id="view_emojiImg" class="imgemoji"/>
                            }
                            else
                            {
                                <img src="" id="view_emojiImg" class="imgemoji" />
                            }
                            <span asp-validation-for="Emoji" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" data-msg-required="*required" data-rule-required="true" />
                            <span asp-validation-for="Name" class="field-validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Rating">Rating</label>
                            <input type="text" asp-for="Rating" class="form-control" data-msg-required="*required" data-rule-required="true" />
                            <span asp-validation-for="Rating" class="field-validation-error"></span>
                        </div>
                    </div>

                        <div class="form-group">
                            <label style="margin-top:25px;">
                                <input type="checkbox" asp-for="IsActive" />
                                Is Active
                            </label>
                        </div>

                </div>
            </div>

            </div>

            <div class="modal-footer justify-content-between">
                <button class="btn btn-primary" id="btn-submit" type="submit">

                    Submit
                </button>
                <button id="btn-reset" class="btn btn-default" type="reset">Reset</button>
                <button data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">Cancel</button>
            </div>
</form>
</div>




