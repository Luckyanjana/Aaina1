@using WYO.Web.Code.LIBS;
@model  WYO.Dto.StaffOvertimeModel
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SiteKeys.ApplicationName</title>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;margin: 15px 0;padding: 0;width: 100%;">
    <table width="650" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="padding:15px 0; border-bottom:1px solid #dddddd;"><img src="@Url.Content(SiteKeys.AdminDomain+"/UploadedFiles/Logo/logo.png")" alt="" border="0" /></td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:18px; font-weight:bold; padding:15px 0 0 0;">
                            Overtime - Request @Model.OvertimeStatusName
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:15px 0;">
                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Your overtime request has been processed and approved. Details of your request are below:
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding:15px 0;">
                                        <table width="100%" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Overtime Type: @Model.OvertimeTypeName
                                                </td>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    <b>Approval Details</b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    From: @Model.OvertimeDate.ToString("dd/MM/yyyy HH:mm:ss")
                                                </td>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Approved by: @(Model.ApproverName)
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Duration: @Model.DurationHours Hours @Model.DurationMinutes minutes
                                                </td>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Approved on: @(Model.ActionDate.HasValue ? Model.ActionDate.Value.ToString("dd/MM/yyyy HH:mm:ss") : "-")
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Lieu Time: @Model.LieuTime Hours/Days
                                                </td>
                                                <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    Notes / Working On:
                                                </td>                                                
                                            </tr>
                                            <tr>
                                                <td colspan="2" style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                                    @Model.OvertimeNote
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">  </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="left">
                    <tr>
                        <td align="center" style=" padding:15px 0; border-top:1px solid #dddddd; font-size:12px; text-align:left; color:#888888;">Copyright @DateTime.UtcNow.Year @SiteKeys.Domain</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
