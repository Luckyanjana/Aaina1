
@{
    ViewData["Title"] = "PushNotification";
}

<section class="content">

    <div class="box">
        <div class="box-body">
            <div class="col-sm-12">
                <div id="frm-add-edit-role" class="box">
                    <form asp-action="PushNotification" asp-controller="home" asp-area="admin" method="post">

                        <div class="modal-body box-body">
                            <div id="validation-summary"></div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" name="title" class="form-control" required />
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Desciption</label>
                                        <textarea name="Desciption" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="box-footer text-center">
                            <button class="btn btn-primary btn-submit" id="btn-submit" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
