                                                        Model.StatusScheduler.Type = (int)ScheduleType.OneTime;
                                                    }
                                                }
                                                <div class="form-group">
                                                    @{
                                                        if (Model.StatusScheduler.Type == 0)
                                                        {
                                                            Model.StatusScheduler.Type = (int)ScheduleType.OneTime;
                                                        }
                                                    }
