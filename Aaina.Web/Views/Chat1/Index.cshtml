
@{
    ViewData["Title"] = "Index";
    Layout = null;

}

<!DOCTYPE html>
<!-- saved from url=(0067)https://www.oflox.com/blog/wp-content/uploads/2020/09/whatsweb.html -->
<html lang="en" class="fa-events-icons-ready">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">


    <title>Aaiina - @CurrentUser.Name</title>

    <link href="~/css/Chat_Style-1.css" rel="stylesheet" />


    <link href="https://use.fontawesome.com/1c6f725ec5.css" media="all" rel="stylesheet">


</head>

<body translate="no">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="https://use.fontawesome.com/1c6f725ec5.js"></script>
    <div class="green-background"></div>
    <div class="wrap">
        <section class="left">
            <div class="profile">
                <img src="@CurrentUser.Avatar">
                <div class="icons">
                    <i class="fa fa-commenting fa-lg" aria-hidden="true"></i>
                    <i class="fa fa-bars fa-lg" aria-hidden="true"></i>
                </div>
            </div>
            <div class="wrap-search">
                <div class="search">
                    <i class="fa fa-search fa" aria-hidden="true"></i>
                    <input type="text" class="input-search" placeholder="Suchen oder neuen Chat beginnen">
                </div>
            </div>
            <div class="contact-list">
            </div>
        </section>

        <section class="right">
            <div class="chat-head">
                <img alt="profilepicture" src="">
                <div class="chat-name">
                    <h1 class="font-name">Papa</h1>
                    <p class="font-online"></p>
                </div>
                <i class="fa fa-search fa-lg" aria-hidden="true" style=""></i>
                <i class="fa fa-paperclip fa-lg" aria-hidden="true" style=""></i>
                <i class="fa fa-bars fa-lg" aria-hidden="true" id="show-contact-information" style=""></i>
                <i class="fa fa-times fa-lg" aria-hidden="true" id="close-contact-information" style="display: none;"></i>
            </div>
            <div class="wrap-chat">
                <div class="chat">

                </div>
                <div class="information" style="display: none;"></div>
            </div>
            <div class="wrap-message">
                <i class="fa fa-smile-o fa-lg" aria-hidden="true"></i>
                <div class="message">
                    <input type="text" class="input-message" placeholder="Schreibe eine Nachricht">
                </div>
                <i class="fa fa-microphone fa-lg" aria-hidden="true"></i>
            </div>
        </section>
    </div>

    <script>
        var userId = '@CurrentUser.UserId';
        var companyId = '@CurrentUser.CompanyId';
        var userName = '@CurrentUser.Name';
        var userAvatar = '@CurrentUser.Avatar';

    </script>
    <script src="~/js/stopExecutionOnTimeout.js"></script>

    <script src="~/Themes/Theme1/js/jquery.min.js"></script>
    <script src="/lib/signalr/signalr.js"></script>
    <script src="~/bower_components/moment/min/moment.min.js" asp-append-version="true"></script>
    <script src="~/js/waitMe.js"></script>
    <script src="~/js/global.js" asp-append-version="true"></script>
    <script id="rendered-js" src="~/js/ChatService1.js"></script>
    @*<script id="rendered-js" src="~/js/Chat1.js"></script>*@







</body>
</html>

