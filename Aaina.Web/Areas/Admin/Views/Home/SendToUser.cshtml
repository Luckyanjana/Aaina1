<div style="text-align:left; margin:0 29px">
    <h3> Notification</h3>
</div>
<section class="content">
    <div class="box">
        <div class="box-body">
            <div class="col-sm-12">
                <div id="frm-add-edit-role" class="box">
                    <form asp-action="sendtouser" asp-controller="home" asp-area="admin" method="post" id="frm-notification">
                        <div class="modal-body box-body">
                            <div id="validation-summary"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Teams<span class="error">*</span></label>
                                        <select asp-for="TeamIds" class="form-control teamSelect" multiple></select>
                                       
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Players</label>
                                        <select asp-for="PlayerIds" class="form-control userSelect" multiple></select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Region<span class="error">*</span></label>
                                        <input type="text" asp-for="Region" class="form-control" />
                                        <span asp-validation-for="Region" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Message<span class="error">*</span></label>
                                        <textarea rows="10" cols="4" asp-for="Message" class="form-control"></textarea>
                                        <span asp-validation-for="Message" class="field-validation-error"></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="box-footer text-center">
                            <button class="btn btn-primary btn-submit" id="btn-submit" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/js/alertify.min.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script src="~/js/Customejs/User/Notification.js"></script>
}