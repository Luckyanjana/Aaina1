                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (IsAddedAtter && atter.IsCalculation)
                                                                        {
                                                                            <input type="checkbox" name="lookPlayers[@rindex].IsCalculation" checked value="true" class="iscalculation" />
                                                                        }
                                                                        else
                                                                        {
                                                                            <input type="checkbox" name="lookPlayers[@rindex].IsCalculation" value="false" class="iscalculation" />
                                                                        }
                                                                    </td>*@
                                                                </tr>

                                                                rindex++;
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
