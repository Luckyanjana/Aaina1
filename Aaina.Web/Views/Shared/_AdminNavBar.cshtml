@using static Aaina.Web.Code.LIBS.NavigationIndicatorHelper;
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@(!string.IsNullOrEmpty(CurrentUser.Avatar)?$"/{CurrentUser.CompanyId}/EmployeeImages/{CurrentUser.Avatar}":"/img/user2-160x160.jpg")" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@User.Identity.Name</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        @await Component.InvokeAsync("GameMenu", new { companyId = CurrentUser.CompanyId, userId = CurrentUser.UserId, gameId=2 })
    </section>
    <!-- /.sidebar -->
</aside>
@CurrentUser