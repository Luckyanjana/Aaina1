@using WYO.Web.Code.LIBS;
@using WYO.Core;
@model  WYO.Dto.LeaveRequestModel
@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SiteKeys.ApplicationName</title>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;margin: 15px 0;padding: 0;width: 100%;">
    <table width="650" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="padding:15px 0; border-bottom:1px solid #dddddd;"><img src="@Url.Content(SiteKeys.AdminDomain+"/UploadedFiles/Logo/logo.png")" alt="" border="0" /></td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:18px; font-weight:bold; padding:15px 0 0 0;">@(Model.LeaveStatus == (int)LeaveStatus.Pending ? "PENDING APPROVAL" : "APPROVED"): '@Model.LeaveTypeName' for @Model.StaffName</td>
                    </tr>
                    <tr>
                        <td style="padding:15px 0;">
                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Confirmation of your leave request submitted. Details as follows:
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Staff Member: @Model.StaffName (@Model.StaffCode)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Department: @Model.DepartmentName
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Leave Type: @Model.LeaveTypeName
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        From: @Model.StartDate.ToString("dddd, dd MMM yyyy")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        To: @Model.EndDate.ToString("dddd, dd MMM yyyy")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Request Notes: @Model.RequestDescription
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        (does not include days from this pending request, if applicable)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        @(Model.LeaveStatus == (int)LeaveStatus.Pending ? "This leave is currently pending approval from your approver. Once a decision has been made you will be notified." : "This leave is currently approved. Once a change has been made you will be notified.")
                                    </td>
                                </tr>


                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="left">
                    <tr>
                        <td align="center" style=" padding:15px 0; border-top:1px solid #dddddd; font-size:12px; text-align:left; color:#888888;">Copyright @DateTime.UtcNow.Year @SiteKeys.Domain</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
