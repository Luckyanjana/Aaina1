@model Aaina.Dto.PendingNotificationDto
@{
    ViewData["Title"] = "_ReplyPendingMessage";
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4><span class='fa fa-bell'>Confirmation</span></h4>
    <div id="msgDiv"> </div>
</div>
<form id="form-Session-Notification">
    @*<input type="hidden" asp-for="UserId" />*@
    <div class="modal-body">
        <label>Remarks</label>
        <textarea id="Remarks" name="Remarks" rows="5" cols="4" class="form-control"></textarea>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success" onclick="updateNotification(@Model.UserId,@Model.SessionId,'A')">Accept</button>
        <button type="button" class="btn btn-danger" onclick="updateNotification(@Model.UserId,@Model.SessionId,'R')">Reject</button>
    </div>
</form>

