                                                                    <tr>
                                                                        <td class="text-center">@item.Id</td>
                                                                        <td class="text-left">@item.Name</td>
                                                                        <td>
                                                                            <input type="hidden" name="lookAttribute[@aindex].AttributeId" value="@item.Id" />
                                                                            @if (IsAddedAtter)
                                                                            {
                                                                                <input type="hidden" name="lookAttribute[@aindex].Id" value="@item.Id" />
                                                                                <input type="checkbox" name="lookAttribute[@aindex].IsAdded" value="true" data-divid="div_add_atterbute" checked data-type="atter" data-id="@item.Id" id="atter_@item.Id" data-name="@item.Name" class="added" />
                                                                            }
                                                                            else
                                                                            {
                                                                                <input type="checkbox" name="lookAttribute[@aindex].IsAdded" value="false" data-divid="div_add_atterbute" data-type="atter" data-id="@item.Id" id="atter_@item.Id" data-name="@item.Name" class="added" />
                                                                            }


                                                                        </td>
                                                                    </tr>
