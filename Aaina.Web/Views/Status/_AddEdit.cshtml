                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="StatusScheduler.Frequency">Frequency</label>
                                                    <select asp-for="StatusScheduler.Frequency" class="form-control" asp-items="@(new SelectList(Model.ScheduleFrequencyList,"Id","Name"))">
