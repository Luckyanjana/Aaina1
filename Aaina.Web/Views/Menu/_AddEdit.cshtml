@model MenuDto
<div id="frm-add-edit-menu" class="box">
    <form asp-action="AddEdit" asp-controller="menu" asp-area="" method="post">
        @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Menu Add/Edit" })

        <div class="modal-body">
            <div id="validation-summary"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-lg-12 col-sm-12">
                <div class="step1">
                    <div class="step1-in">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="Name"><i class="fa fa-info-circle"></i> Menu Name</label>
                                    <input asp-for="Name" class="form-control mb15" type="text" placeholder="Menu Name" data-msg-required="*required" data-rule-required="true">
                                    <span asp-validation-for="Name" class="field-validation-error"></span>
                                </div>

                                <div class="col-md-6">
                                    <label>Parent</label>
                                    <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(Model.ParentMenuList,"Id","Name"))"> </select>
                                    <span asp-validation-for="ParentId" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label><i class="fa fa-info-circle"></i> Controller</label>
                                    <input type="text" asp-for="Controller" class="form-control" />
                                    <span asp-validation-for="Controller" class="field-validation-error"></span>
                                </div>

                                <div class="col-md-6">
                                    <label><i class="fa fa-info-circle"></i> Action</label>
                                    <input type="text" asp-for="Action" class="form-control" />
                                    <span asp-validation-for="Action" class="field-validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label><i class="fa fa-info-circle"></i> Order</label>
                                    <input type="text" asp-for="Order" class="form-control" />
                                    <span asp-validation-for="Order" class="field-validation-error"></span>
                                </div>

                                <div class="col-md-6">
                                    <label style="margin-top:25px;">
                                        <input type="checkbox" asp-for="IsMain" />
                                        Is Main
                                    </label>

                                    <label style="margin-top:25px;">
                                        <input type="checkbox" asp-for="IsActive" />
                                        Is Active
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("_ModalFooter", new ModalFooter { })
    </form>
</div>




