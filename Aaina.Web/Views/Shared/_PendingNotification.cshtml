    </div>
</div>

<script type="text/javascript">
    function showHideRow(row,$this) {
        $("#" + row).toggle();
        var spantxt = $($this).find('span');
        if ($(spantxt).text() == " + ") {
            $(spantxt).text(" - ");
        }
        else if ($(spantxt).text() == " - ") {
            $(spantxt).text(" + ");
        }

    }
  
</script> 