@using WYO.Web.Code.LIBS;
@using WYO.Core;
@model  WYO.Data.UserProfile
@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SiteKeys.ApplicationName</title>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;margin: 15px 0;padding: 0;width: 100%;">
    <table width="650" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="padding:15px 0; border-bottom:1px solid #dddddd;"><img src="@Url.Content(SiteKeys.AdminDomain+"/UploadedFiles/Logo/logo.png")" alt="" border="0" /></td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:18px; font-weight:bold; padding:15px 0 0 0;">Hello @Model.FirstName, welcome to @SiteKeys.ApplicationName!</td>
                    </tr>
                    <tr>
                        <td style="padding:15px 0;">
                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        To access your @SiteKeys.ApplicationName account, please click the link below or copy and paste it into your browser and enter the login details provided.
                                    </td>
                                </tr>


                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>Company Login URL :</b> <a href="@WYO.Web.Code.LIBS.SiteKeys.Domain" target="_blank">@WYO.Web.Code.LIBS.SiteKeys.Domain</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>Company Reference :</b> @Model.Staff.FirstOrDefault().Company.CompanyRef
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>User Name :</b> <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                                    </td>
                                </tr>
                                @if (!String.IsNullOrEmpty(Model.Password))
                                {
                                    <tr>
                                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                            <b>Password :</b> @Model.Password
                                        </td>
                                    </tr>
                                }

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>Link doesn't work?</b>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        This link is only valid for up to 24 hours. After this time, you can request a reset link via the PeoplePro website at <a href="@(WYO.Web.Code.LIBS.SiteKeys.Domain)company/Login/ForgotPassword" target="_blank">@(WYO.Web.Code.LIBS.SiteKeys.Domain)company/Login/ForgotPassword</a>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Need further assistance? Contact us at <a href="mailto:@SiteKeys.ApplicationSupportEmail">@SiteKeys.ApplicationSupportEmail</a>
                                    </td>
                                </tr>


                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;"></td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Thank you,
                                    </td>
                                </tr>

                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        The PeoplePro Team.
                                    </td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="left">
                    <tr>
                        <td align="center" style=" padding:15px 0; border-top:1px solid #dddddd; font-size:12px; text-align:left; color:#888888;">Copyright @DateTime.UtcNow.Year @SiteKeys.Domain</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
