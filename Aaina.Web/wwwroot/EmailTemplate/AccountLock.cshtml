@using WYO.Web.Code.LIBS;
@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SiteKeys.ApplicationName</title>
</head>

<body style="font-family: Arial, Helvetica, sans-serif;margin: 15px 0;padding: 0;width: 100%;">
    <table width="650" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="padding:15px 0; border-bottom:1px solid #dddddd;"><img src="@Url.Content(SiteKeys.AdminDomain+"/UploadedFiles/Logo/logo.png")" alt="" border="0" /></td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td style="font-family:Arial, Helvetica, sans-serif; font-size:18px; font-weight:bold; padding:15px 0 0 0;">Dear @ViewBag.Name,</td>
                    </tr>
                    <tr>
                        <td style="padding:15px 0;">
                            <table width="100%" cellpadding="0" cellspacing="0" align="center">
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        We received a request with invalid password so we have locked your account for 15 min. Please wait 15 min and try again with correct password.
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">Your account auto unlock after 15 min.</td>
                                </tr>
                                
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>IP Address :</b> @ViewBag.ipAddress
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        <b>User Name :</b> <a href="mailto:@ViewBag.Username">@ViewBag.Username</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        If you did not request with invalid password, please contact us at <a href="mailto:@SiteKeys.ApplicationSupportEmail">@SiteKeys.ApplicationSupportEmail</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        &nbsp;
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        Thanks agains!
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-family:Arial, Helvetica, sans-serif; font-size:14px; padding:5px 0; color:#333;">
                                        @SiteKeys.ApplicationName Team
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" cellpadding="0" cellspacing="0" align="left">
                    <tr>
                        <td align="center" style=" padding:15px 0; border-top:1px solid #dddddd; font-size:12px; text-align:left; color:#888888;">Copyright @DateTime.UtcNow.Year @SiteKeys.Domain</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
