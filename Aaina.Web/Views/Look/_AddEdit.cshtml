                                                                    @*<td>
                                                                        @if (IsAddedAtter && atter.IsView)
                                                                        {
                                                                            <input type="checkbox" name="lookPlayers[@rindex].IsView" checked value="true" class="isview" />
                                                                        }
                                                                        else
                                                                        {
